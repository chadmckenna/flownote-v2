<% notes.each do |note| %>
  <div class="note" style="padding: 0.5rem;">
    <div style="display: flex; justify-content: space-between;">
      <%= link_to note.title, note %>
      <div>
        <%= link_to "Edit", edit_note_path(note) %>
      </div>
    </div>
    <div>
      <%= time_tag note.updated_at, time_ago(note.updated_at)%><span class='<%= note.public ? "public" : "private" %>' title='<%= note.public ? "public" : "private" %>' />
    </div>
    <%= render "notes/tags", tags: note.tags %>
  </div>
<% end %>
