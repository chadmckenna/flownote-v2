<h1>Notes</h1>

<%- if notice %>
  <p style="color: green"><%= notice %></p>
<%- end %>

<nav>
  <ul><li><%= link_to "New note", new_note_path %></li></ul>
</nav>

<div id="notes">
  <% @notes.each do |note| %>
    <p>
      <%= link_to note.title, note %>
      <%= link_to "[Edit]", edit_note_path(note) %>
    </p>
  <% end %>
</div>

