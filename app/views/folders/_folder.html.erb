<div id="<%= dom_id folder %>">
  <h4><%= folder.name %></h4>

  <% folder.files.each do |file| %>
    <div class="user_file">
      <% if file.representable? %>
        <div><%= image_tag file.representation(resize_to_limit: [100, 100]), data: { title: file.filename } %></div>
        <%= render 'file_links', file: file, folder: folder %>
      <% else %>
        <div class="content_container">
          <span style="position: absolute;">
            <%= image_tag "/apple-touch-icon.png", width: '80px', height: '80px', alt: "Download file" %>
            <span class="content_type">.<%= file.filename.extension %></span>
          </span>
        </div>
        <%= render 'file_links', file: file, folder: folder %>
      <% end %>
    </div>
  <% end %>
</div>
