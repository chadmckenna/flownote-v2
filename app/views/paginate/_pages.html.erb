<p style="text-align: center">
<% (1..@total_pages.to_i).map do |p| %>
  <span style="margin: 0 0.3rem">
    <% if @page == p %>
      <strong><u><%= link_to p, url_for(controller: route, action: 'index', page: p) %></u></strong>
    <% else %>
      <%= link_to p, url_for(controller: route, action: 'index', page: p) %>
    <% end %>
  </span>
<% end %>
</p>
